borg-archive_media_longterm()  { cd $MNTDIR/archive_media && nohup borg create --noflags -s -x --list $MNTDIR/backup_borg/borg/repo::backup_archive_media-`date -Iseconds` archive_media >/tmp/nohup-borg-backup_archive_media.out 2>&1; }
borg-archive_ice_longterm()    { cd $MNTDIR/archive_ice && nohup borg create --noflags -s -x --list $MNTDIR/backup_borg/borg/repo::longterm_archive_ice-`date -Iseconds` archive >/tmp/nohup-borg-longterm_archive_ice.out 2>&1; }

