#!/bin/bash

# $1 - target machine $2 root fs version
mnt-linux
ssh $1 "mkdir -p /tmp/linuxrw && sudo /usr/bin/mount /dev/disk/by-label/linux /tmp/linuxrw -o rw,subvol=/ && mkdir /tmp/linuxrw/linux-new"
sudo btrfs send /go/linux/linux | ssh $1 "sudo /bin/btrfs receive /tmp/linuxrw/linux-new/"
umnt-linux
