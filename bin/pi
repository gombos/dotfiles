#!/bin/sh

if [ -f /usr/sbin/pacman ]; then
  installpackage() { pacman -Sy --noconfirm --needed "$@" ;}
fi

if [ -f /opt/homebrew/bin/brew ]; then
  installpackage() { brew install "$@" ;}
fi

if [ -f /usr/sbin/pacman ]; then
  installpackage() { pacman -Sy --noconfirm --needed "$@" ;}
fi

if [ -f /usr/sbin/paru ]; then
  installpackage() { paru --sync --removemake --needed --noconfirm "$@" ;}
fi

if [ -f /usr/bin/apt-get ]; then
  installpackage() { apt-get install -y -qq --no-install-recommends -o Dpkg::Use-Pty=0 "$@" ;}
fi

if [ -f /usr/sbin/aur-install ]; then
  installpackage() { /usr/sbin/aur-install "$@" ;}
fi

if [ -f /usr/local/bin/pacapt ]; then
  installpackage() { pacapt -Sy --noconfirm --needed "$@" ;}
fi

if [ -f /bin/dnf ]; then
  installpackage() { dnf -y install "$@" ;}
fi

installpackage "$@"
