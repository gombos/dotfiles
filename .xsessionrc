#!/bin/sh

# keymaps
[ -f ~/.Xmodmap ] && xmodmap ~/.Xmodmap

#todo - add some condition
#xrandr --output Virtual1 --mode 2880x1800
xsetroot -solid black

# two monitor setup if needed
# xrandr --output DP-2 --mode 3840x2160 --output HDMI-1 --mode 1920x1080 --rate 60.00 --left-of DP-2

# eval $(gpg-agent --daemon)

# change the speed of scrolling if needed
# xinput --set-prop 14 "libinput Accel Speed" -0.6

# Syncronize X clipboard and selection buffers.
if [ -x /usr/bin/autocutsel ]; then
    # Keep the clipboard in sync with the primary buffer.
    autocutsel -fork
fi

(
  # Set X resources
  xrdb -merge ~/.Xresources-*
) &


